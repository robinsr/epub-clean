{
  //"require": "ts-node/register",
  // Specify "loader" for native ESM
  "loader": "ts-node/esm",
  "node-option": [
    "experimental-specifier-resolution=node",
    "loader=ts-node/esm"
  ],
  "require": [
    "test/unit/support/hooks.ts"
  ],
  "reporter": "spec",
  "extension": ["ts"],
  "spec": [
    "test/unit/**/*.spec.ts"
  ],
  "watch-files": [
    "test/unit/**/*.spec.ts"
  ]
}