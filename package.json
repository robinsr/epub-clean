{
  "name": "epub-clean",
  "version": "1.0.0",
  "description": "",
  "main": "build/src/index.js",
  "scripts": {
    "clean": "rm -rf build",
    "copy-config": "cp -r config build",
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -w -p tsconfig.json",
    "test": "mocha",
    "watch": "mocha --watch --watch-file *.ts",
    "test-compile": "tsc -p tsconfig.test.json",
    "run-map": "node --enable-source-maps build/src/index.js",
    "run-nomap": "node build/src/index.js",
    "test-basic": "npm run build && npm run run-nomap -- test/data/test-doc.html -d -c test/data/test-config.json5",
    "test-diff": "npm run build && node --enable-source-maps build/src/index.js test/data/test-doc.html -d -fd -c test/data/test-config.json",
    "test-edge-case": "npm run build && node --enable-source-maps build/src/index.js test/data/test-doc.html -d -c test/data/edge-case-config.json",
    "test-config": "npm run build && node --enable-source-maps build/src/index.js test/data/test-doc.html -d"
  },
  "type": "module",
  "author": "",
  "license": "ISC",
  "dependencies": {
    "callsites": "^4.1.0",
    "colors": "^1.4.0",
    "commander": "^11.0.0",
    "config": "^3.3.9",
    "css-tree": "^2.3.1",
    "diff": "^5.1.0",
    "html-format": "^1.1.2",
    "joi": "^17.10.2",
    "js-yaml": "^4.1.0",
    "jsdom": "^22.1.0",
    "json5": "^2.2.3",
    "log4js": "^6.9.1",
    "remeda": "^1.27.0",
    "short-unique-id": "^5.0.2",
    "short-uuid": "^4.2.2",
    "source-map-support": "^0.5.21",
    "specificity": "^1.0.0",
    "typescript-optional": "^3.0.0-alpha.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@babel/polyfill": "^7.12.1",
    "@babel/register": "^7.22.15",
    "@types/chai": "^4.3.6",
    "@types/config": "^3.3.1",
    "@types/css-tree": "^2.3.2",
    "@types/diff": "^5.0.5",
    "@types/expect": "^24.3.0",
    "@types/joi": "^17.2.3",
    "@types/jsdom": "^21.1.3",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.6.5",
    "@types/source-map-support": "^0.5.8",
    "chai": "^4.3.8",
    "mocha": "^10.2.0",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2"
  }
}
