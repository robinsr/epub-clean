{
  "name": "epub-clean",
  "version": "1.0.0",
  "description": "",
  "main": "build/src/index.js",
  "bin": {
    "esnub": "lib/index.js"
  },
  "scripts": {
    "clean": "rm -rf build",
    "copy-config": "cp -r config lib",
    "compile": "tsc -p tsconfig.json",
    "test-compile": "tsc -p tsconfig.test.json",
    "build": "npm run compile && npm run copy-config",
    "build:watch": "tsc -w -p tsconfig.json",
    "relink": "npm run build && npm link",
    "test": "mocha",
    "watch": "mocha --watch --watch-file *.ts",
    "run-map": "node --enable-source-maps build/src/index.js",
    "run-nomap": "node build/src/index.js",
    "test-basic": "npm run build && npm run run-nomap -- test/data/test-doc.html -d -c test/config/test-config.json",
    "test-json5": "npm run build && npm run run-nomap -- test/data/test-doc.html -d -c test/config/test-config.json5",
    "test-yaml": "npm run build && npm run run-nomap -- test/data/test-doc.html -d -c test/config/test-config.yaml",
    "test-diff": "npm run build && node --enable-source-maps build/src/index.js test/data/test-doc.html -d -fd -c test/config/test-config.json",
    "test-edge-case": "npm run build && node --enable-source-maps build/src/index.js test/data/test-doc.html -d -c test/config/edge-case-config.json",
    "test-config": "npm run build && node --enable-source-maps build/src/index.js test/config/test-doc.html -d"
  },
  "type": "module",
  "author": "",
  "license": "ISC",
  "dependencies": {
    "callsites": "^4.1.0",
    "chalk": "^5.3.0",
    "clear": "^0.1.0",
    "cli-highlight": "^2.1.11",
    "colors": "^1.4.0",
    "commander": "^11.0.0",
    "config": "^3.3.9",
    "css-tree": "^2.3.1",
    "diff": "^5.1.0",
    "enquirer": "^2.4.1",
    "figlet": "^1.6.0",
    "html-format": "^1.1.2",
    "joi": "^17.10.2",
    "js-yaml": "^4.1.0",
    "jsdom": "^22.1.0",
    "json5": "^2.2.3",
    "log4js": "^6.9.1",
    "mime-types": "^2.1.35",
    "node-pager": "^0.3.6",
    "object-path": "^0.11.8",
    "remeda": "^1.27.0",
    "short-unique-id": "^5.0.2",
    "short-uuid": "^4.2.2",
    "source-map-support": "^0.5.21",
    "specificity": "^1.0.0",
    "typescript-optional": "^3.0.0-alpha.3",
    "unzipper": "^0.10.14",
    "uuid": "^9.0.1",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@babel/polyfill": "^7.12.1",
    "@babel/register": "^7.22.15",
    "@types/chai": "^4.3.6",
    "@types/clear": "^0.1.2",
    "@types/config": "^3.3.1",
    "@types/css-tree": "^2.3.2",
    "@types/diff": "^5.0.5",
    "@types/expect": "^24.3.0",
    "@types/figlet": "^1.5.6",
    "@types/joi": "^17.2.3",
    "@types/jsdom": "^21.1.3",
    "@types/mime-types": "^2.1.2",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.6.5",
    "@types/object-path": "^0.11.2",
    "@types/source-map-support": "^0.5.8",
    "@types/unzipper": "^0.10.7",
    "@types/xml2js": "^0.4.12",
    "chai": "^4.3.8",
    "mocha": "^10.2.0",
    "mochawesome": "^7.1.3",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2"
  }
}
